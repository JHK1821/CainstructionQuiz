<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ioann_000.cainstructionquiz">
    <uses-permission android:name="android.permission.INTERNET"/>
    <application

        android:allowBackup="true"
        android:icon="@mipmap/abacus"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".LaunchActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".DataBaseActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PlayActivity"
            android:label="PlayActivity"
            android:parentActivityName=".DataBaseActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ChoiceActivity"
            android:label="@string/title_activity_choice"
            android:parentActivityName=".PlayActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AboutActivity"
            android:label="@string/title_activity_about"
            android:parentActivityName=".ChoiceActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Main_PlayActivity"
            android:label="@string/title_activity_main__play"
            android:parentActivityName=".ChoiceActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <uses-permission android:name="android.permission.INTERNET" />

    </application>

</manifest>