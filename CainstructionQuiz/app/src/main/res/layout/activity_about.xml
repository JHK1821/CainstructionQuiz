<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.example.ioann_000.cainstructionquiz.AboutActivity">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">



        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_blue_dark"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            android:layout_alignParentStart="true"
            android:theme="@android:style/Theme.DeviceDefault.Settings" />
    </android.support.design.widget.AppBarLayout>


    <RelativeLayout
        android:id="@+id/activity_about"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.example.ioann_000.cainstructionquiz.AboutActivity"
        android:background="@android:color/darker_gray"
        android:theme="@style/Base.AlertDialog.AppCompat"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="200dp"
            app:srcCompat="@mipmap/abacus"
            android:id="@+id/imageView"
            android:layout_height="150dp"
            android:layout_marginBottom="31dp"
            android:layout_above="@+id/infoTxtView"
            android:layout_centerHorizontal="true" />

        <TextView
            android:text="CainStruction Quiz for kids"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/CainStructionQuizTxtView"
            android:textStyle="normal|bold"
            android:textSize="20sp"
            android:layout_marginTop="23dp"
            android:layout_below="@+id/AboutTxtView"
            android:layout_centerHorizontal="true" />

        <TextView
            android:text="For the lesson Human-Computer Interaction."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/date_and_reservedTxtView"
            android:layout_alignStart="@+id/CainStructionQuizTxtView"
            android:layout_marginBottom="15dp"
            android:id="@+id/lessonTxtView"
            android:textStyle="normal|bold|italic" />

        <TextView
            android:text="Programmers: GIannis Variozidis (141065), Marina Damigou (131136)                         Version:1.0.0 "
            android:id="@+id/infoTxtView"
            android:textSize="14sp"
            android:layout_height="150dp"
            android:layout_width="180dp"
            android:textStyle="normal|bold|italic"
            android:layout_alignEnd="@+id/date_and_reservedTxtView"
            android:layout_above="@+id/lessonTxtView" />

        <TextView
            android:text="2016-2017.  All rights reserved"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            android:id="@+id/date_and_reservedTxtView"
            android:textStyle="normal|bold"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:text="About"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/AboutTxtView"
            android:textStyle="normal|bold"
            android:textSize="35sp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="47dp" />

    </RelativeLayout>


</RelativeLayout>


